<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/miko.png') }}">        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
